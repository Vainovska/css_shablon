        <header class="header">
             <div>
                {{> logo}}
             </div>

            <nav class="header-nav">
                <div class="header_nav_right">
                    {{> nav list=header}}
                </div>
            </nav>
        </header>
        <main class="main">
            {{#with info}}
            <div class="info">
                <h1 class="info_title">{{title}}</h1>
                <p class="info_text">{{description}}</p>
            </div>
            {{/with}}
            {{#with form}}
            <form class="form">                
                    {{#each inputs}}
                    <div class="form_input_list">
                    <input type="{{text}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" class="form_input">
                    </div>
                    {{/each}}
                
                <div class="form_checkbox">
                    <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                    <div></div>
                    <label for="{{checkbox.name}}">{{checkbox.label}}</label>
                </div>
                <button type="submit" class="form_button">{{button}}</button>
                <p class="form_info">{{info}}</p>
            </form>
            {{/with}}
        </main>
        {{#with updates}}
        <div class="updates">
            <h2 class="updates_title">{{title}}</h2>
            <ul class="updates_list">
                {{#each list}}
                <li class="updates_list_item">
                    <div class="icon" id="{{id}}"></div>
                    <div class="data">
                    <p class="updates_list_nickname">@{{nickname}}</p>
                    <p class="updates_list_desc">{{description}}</p>
                    </div>
                </li>
                {{/each}}
            </ul>
            <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
        </div>
        {{/with}}
        {{#with expirience}}
        <div class="expirience">
            <div class="title_badge">
                <h3 class="expirience_title">{{title}}</h3>
                <div class="expirience_badge">{{badge}}</div>
            </div>
           <div class="list_ex">
                {{#each list}}
                <div class="expirience_list">
                    <strong>{{name}}</strong>
                    <p>{{details}}</p>
                </div>
                {{/each}}
            </div>
        </div> 
        {{/with}}              
        <footer class="footer">
            <div>
                {{> logo}}
                <span class="footer-copyright">Copyright 2023-2024</span>
            </div>
            {{#each footer}}
            <div>
                <span class="footer_title">{{title}}</span>
                {{> nav list=links isVertical=true }}
            </div>
            {{/each}}
        </footer>