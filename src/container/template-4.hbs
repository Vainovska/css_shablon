        <header class="header">
             <div>
                {{> logo}}
             </div>

            <nav class="header-nav">
                <div class="header_nav_right">
                    {{> nav list=header}}
                </div>
            </nav>
        </header>
        {{#with main}}
         <div class="hero">
            <img src="{{image}}" alt="Main image" class="hero_photo">
            <div class="hero_content">
                <h1 class="hero_title">{{heading}}</h1>
                <p class="hero_text">{{description}}</p>
                <a class="button hero_button" href="{{href}}">{{button}}</a>
            </div>
         </div>
       {{/with}}
       <main class="featured">
        {{#each featured}}
            {{>card_featured data=this}}
        {{/each}}
       </main>       
        <div class="form">
            {{#each actions}}
                <div class="form_content">
                    <h3 class="form_title">{{heading}}</h3>
                     <a href="{{url}}" class="button form_button">{{text}}</a>
                </div>  
            {{/each}}                      
        </div>        
        <footer class="footer">
            <div>
                {{> logo}}
                <span class="footer-copyright">Copyright 2023-2024</span>
            </div>
            {{#each footer}}
            <div>
                <span class="footer_title">{{title}}</span>
                {{> nav list=links isVertical=true }}
            </div>
            {{/each}}
        </footer>